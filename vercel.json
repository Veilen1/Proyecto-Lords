{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "redirects": [
    { "source": "/api/(.*)", "dest": "backend/index.js" },
    { "source": "/(.*)", "dest": "frontend/dist/index.html" } 
  ]
}